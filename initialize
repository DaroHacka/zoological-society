#!/bin/bash

# Video Game Archive - Initialize Script
# Starts both backend and frontend servers with auto-restart and logging

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Configuration
BACKEND_PORT=9001
FRONTEND_PORT=3021
MAX_LOG_SIZE=10485760  # 10MB
MAX_LOG_FILES=5
RESTART_DELAY=5
MAX_RESTART_ATTEMPTS=3

# Log files
BACKEND_LOG="$SCRIPT_DIR/backend.log"
FRONTEND_LOG="$SCRIPT_DIR/frontend.log"

# State file
PID_FILE="$SCRIPT_DIR/.init_pids"
RESTART_COUNT_FILE="$SCRIPT_DIR/.restart_count"

# Colors (using tput for better compatibility)
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Status symbols
OK_SYM="${GREEN}✓${NC}"
FAIL_SYM="${RED}✗${NC}"

# Logging function
log_msg() {
    local msg="[$(date '+%Y-%m-%d %H:%M:%S')] $1"
    echo -e "$msg" | tee -a "$BACKEND_LOG" 2>/dev/null
}

log_frontend() {
    local msg="[$(date '+%Y-%m-%d %H:%M:%S')] $1"
    echo -e "$msg" | tee -a "$FRONTEND_LOG" 2>/dev/null
}

# Rotate logs if too large
rotate_log() {
    local logfile=$1
    if [ -f "$logfile" ]; then
        local size=$(stat -c%s "$logfile" 2>/dev/null)
        if [ "$size" -gt "$MAX_LOG_SIZE" ]; then
            for i in $(seq $((MAX_LOG_FILES - 1)) -1 1); do
                [ -f "${logfile}.${i}" ] && mv "${logfile}.${i}" "${logfile}.$((i + 1))"
            done
            mv "$logfile" "${logfile}.1"
            touch "$logfile"
        fi
    fi
}

# Kill existing processes on our ports
kill_existing() {
    echo -e "${YELLOW}Checking for existing processes...${NC}"
    
    # Kill existing python main.py processes
    pkill -f "python.*main.py" 2>/dev/null || true
    
    # Kill processes using our ports
    fuser -k "$BACKEND_PORT/tcp" 2>/dev/null || true
    fuser -k "$FRONTEND_PORT/tcp" 2>/dev/null || true
    
    # Kill by PID file if exists
    if [ -f "$PID_FILE" ]; then
        read -r OLD_BACKEND_PID OLD_FRONTEND_PID < "$PID_FILE"
        [ -n "$OLD_BACKEND_PID" ] && kill "$OLD_BACKEND_PID" 2>/dev/null || true
        [ -n "$OLD_FRONTEND_PID" ] && kill "$OLD_FRONTEND_PID" 2>/dev/null || true
        rm -f "$PID_FILE"
    fi
    
    sleep 1
    echo -e "${GREEN}Clean start ready.${NC}"
}

# Cleanup function
cleanup() {
    echo ""
    log_msg "${YELLOW}Shutting down servers...${NC}"
    
    if [ -f "$PID_FILE" ]; then
        read -r BACKEND_PID FRONTEND_PID < "$PID_FILE"
        
        [ -n "$BACKEND_PID" ] && kill "$BACKEND_PID" 2>/dev/null
        [ -n "$FRONTEND_PID" ] && kill "$FRONTEND_PID" 2>/dev/null
        
        rm -f "$PID_FILE"
    fi
    
    [ -f "$RESTART_COUNT_FILE" ] && rm -f "$RESTART_COUNT_FILE"
    
    log_msg "${GREEN}Shutdown complete.${NC}"
    exit 0
}

# Check if process is running
is_running() {
    local pid=$1
    [ -n "$pid" ] && kill -0 "$pid" 2>/dev/null
}

# Get restart count
get_restart_count() {
    local service=$1
    [ -f "$RESTART_COUNT_FILE" ] && grep "^${service}:" "$RESTART_COUNT_FILE" | cut -d: -f2 || echo "0"
}

# Increment restart count
inc_restart_count() {
    local service=$1
    local count=$(get_restart_count "$service")
    local new_count=$((count + 1))
    sed -i "s/^${service}:.*/${service}:${new_count}/" "$RESTART_COUNT_FILE" 2>/dev/null || echo "${service}:${new_count}" >> "$RESTART_COUNT_FILE"
}

# Reset restart count
reset_restart_count() {
    local service=$1
    sed -i "s/^${service}:.*/${service}:0/" "$RESTART_COUNT_FILE" 2>/dev/null
}

# Start backend
start_backend() {
    log_msg "${YELLOW}Starting backend server on port $BACKEND_PORT...${NC}"
    "$SCRIPT_DIR/venv/bin/python" main.py >> "$BACKEND_LOG" 2>&1 &
    echo $! > /tmp/backend_pid.txt
}

# Start frontend
start_frontend() {
    log_frontend "${YELLOW}Starting frontend server on port $FRONTEND_PORT...${NC}"
    python3 -m http.server "$FRONTEND_PORT" >> "$FRONTEND_LOG" 2>&1 &
    echo $! > /tmp/frontend_pid.txt
}

# Show status
show_status() {
    local backend_status="${FAIL_SYM} Not running"
    local frontend_status="${FAIL_SYM} Not running"
    
    if [ -f "$PID_FILE" ]; then
        read -r BACKEND_PID FRONTEND_PID < "$PID_FILE"
        
        if is_running "$BACKEND_PID"; then
            backend_status="${OK_SYM} Running (PID: $BACKEND_PID)"
        fi
        
        if is_running "$FRONTEND_PID"; then
            frontend_status="${OK_SYM} Running (PID: $FRONTEND_PID)"
        fi
    fi
    
    echo ""
    echo -e "╔═══════════════════════════════════════════╗"
    echo -e "║     Video Game Archive - Status          ║"
    echo -e "╠═══════════════════════════════════════════╣"
    echo -e "║  Backend (API):  $backend_status      ║"
    echo -e "║  Frontend (Web): $frontend_status      ║"
    echo -e "╠═══════════════════════════════════════════╣"
    echo -e "║  Backend:  http://192.168.1.3:$BACKEND_PORT        ║"
    echo -e "║  Frontend: http://192.168.1.3:$FRONTEND_PORT      ║"
    echo -e "╚═══════════════════════════════════════════╝"
    echo ""
    echo -e "Press ${YELLOW}Ctrl+C${NC} to stop all servers"
    echo ""
}

# Trap signals
trap cleanup SIGINT SIGTERM

# Main
echo -e "${GREEN}=== Video Game Archive Initialize ===${NC}"

# Kill existing processes
kill_existing

# Rotate logs
rotate_log "$BACKEND_LOG"
rotate_log "$FRONTEND_LOG"

# Reset restart counts
echo "backend:0" > "$RESTART_COUNT_FILE"
echo "frontend:0" >> "$RESTART_COUNT_FILE"

# Start backend
start_backend
sleep 2

# Start frontend  
start_frontend
sleep 1

# Read PIDs from temp files
BACKEND_PID=$(cat /tmp/backend_pid.txt)
FRONTEND_PID=$(cat /tmp/frontend_pid.txt)
rm -f /tmp/backend_pid.txt /tmp/frontend_pid.txt

# Save PIDs
echo "$BACKEND_PID $FRONTEND_PID" > "$PID_FILE"

# Show status
show_status

# Log startup
log_msg "Backend started (PID: $BACKEND_PID)"
log_frontend "Frontend started (PID: $FRONTEND_PID)"

# Watchdog loop
while true; do
    sleep 2
    
    # Check backend
    if ! is_running "$BACKEND_PID"; then
        log_msg "${RED}Backend crashed!${NC}"
        count=$(get_restart_count "backend")
        
        if [ "$count" -lt "$MAX_RESTART_ATTEMPTS" ]; then
            log_msg "Restarting backend in $RESTART_DELAY seconds... (attempt $((count + 1))/$MAX_RESTART_ATTEMPTS)"
            inc_restart_count "backend"
            sleep "$RESTART_DELAY"
            start_backend
            sleep 1
            BACKEND_PID=$(cat /tmp/backend_pid.txt)
            rm -f /tmp/backend_pid.txt
            echo "$BACKEND_PID $FRONTEND_PID" > "$PID_FILE"
            reset_restart_count "frontend"
        else
            log_msg "${RED}Max restart attempts reached for backend. Stopping...${NC}"
            break
        fi
    fi
    
    # Check frontend
    if ! is_running "$FRONTEND_PID"; then
        log_msg "${RED}Frontend crashed!${NC}"
        count=$(get_restart_count "frontend")
        
        if [ "$count" -lt "$MAX_RESTART_ATTEMPTS" ]; then
            log_msg "Restarting frontend in $RESTART_DELAY seconds... (attempt $((count + 1))/$MAX_RESTART_ATTEMPTS)"
            inc_restart_count "frontend"
            sleep "$RESTART_DELAY"
            start_frontend
            sleep 1
            FRONTEND_PID=$(cat /tmp/frontend_pid.txt)
            rm -f /tmp/frontend_pid.txt
            echo "$BACKEND_PID $FRONTEND_PID" > "$PID_FILE"
            reset_restart_count "backend"
        else
            log_msg "${RED}Max restart attempts reached for frontend. Stopping...${NC}"
            break
        fi
    fi
done

cleanup
